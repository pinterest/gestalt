{
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "arrowParens": "always",
        "jsxBracketSameLine": false,
        "printWidth": 100,
        "quoteProps": "preserve",
        "tabWidth": 2,
        "trailingComma": "all"
      }
    },
    {
      "files": "*.css",
      "options": {
        "parser": "css",
        "singleQuote": false
      }
    },
    {
      "files": "*.md",
      "options": {
        "parser": "markdown"
      }
    }
  ]
}
